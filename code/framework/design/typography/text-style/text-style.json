{
  "text_styles": [
    {
      "name": "Default",
      "description": "The basic settings for a text.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-regular"
        },
        {
          "name": "scale",
          "value": "default"
        },
        {
          "name": "colors",
          "value": "black-on-white"
        }
      ],
      "properties": [
        {
          "name": "letter-spacing",
          "value": "1.1px"
        }
      ]
    },
    {
      "name": "Body text",
      "description": "Settings for text blocks.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "p"
        }
      ],
      "properties": [
        {
          "name": "max-width",
          "value": "25em"
        }
      ],
      "responsive": [
        {
          "breakpoint": "tablet",
          "mixins": [
            {
              "name": "scale",
              "value": "large-1"
            }
          ]
        },
        {
          "breakpoint": "laptop",
          "mixins": [
            {
              "name": "scale",
              "value": "large-2"
            }
          ]
        },
        {
          "breakpoint": "desktop",
          "mixins": [
            {
              "name": "scale",
              "value": "large-3"
            }
          ]
        }
      ]
    },
    {
      "name": "Metamn",
      "description": "Settings for the Metamn logo.",
      "based_on": "Silkscreen",
      "mixins": [
        {
          "name": "font",
          "value": "silkscreen-regular"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ]
    },
    {
      "name": "Title",
      "description": "Title",
      "based_on": "Nimbus Sans Bold",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-bold"
        },
        {
          "name": "scale",
          "value": "large-4"
        },
        {
          "name": "word-wrap",
          "value": ""
        }
      ],
      "responsive": [
        {
          "breakpoint": "mobile",
          "mixins": [
            {
              "name": "scale",
              "value": "large-3"
            }
          ]
        }
      ],
      "properties": [
        {
          "name": "line-height",
          "value": "1"
        }
      ]
    },
    {
      "name": "Article body text",
      "description": "Settings for very long text.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "p"
        },
        {
          "name": "h2"
        },
        {
          "name": "h3"
        },
        {
          "name": "a"
        },
        {
          "name": "ol"
        },
        {
          "name": "ul"
        },
        {
          "name": "blockquote"
        },
        {
          "name": "image"
        }
      ]
    },
    {
      "name": "Figcaption",
      "description": "Figure caption",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "scale",
          "value": "small-1"
        }
      ]
    }
  ]
}
